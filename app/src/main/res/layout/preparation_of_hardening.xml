<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/cart3"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cart2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@+id/view_1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_launcher_round" />

            <RelativeLayout
                android:layout_below="@id/view_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/member_login_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Preparation Of Hardening"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:typeface="monospace" />

          <LinearLayout
              android:id="@+id/first_date"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content"
              android:layout_below="@+id/member_login_tv"
              android:layout_centerHorizontal="true"
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25sp"
              android:layout_marginBottom="10sp"
              android:padding="10sp"
              android:layout_marginTop="10sp"
              android:gravity="center">

               <TextView
                   android:layout_weight="1"
                    android:id="@+id/textView71"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:text="Select From Date"
                   android:background="@android:color/transparent"
                   android:inputType="date"
                   android:textColor="#fff"
                   android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:background="@drawable/ic_date_range"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

          </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_date"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_date"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25sp"
                    android:layout_marginBottom="10sp"
                    android:padding="10sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView72"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select To Date"
                        android:background="@android:color/transparent"
                        android:inputType="date"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:background="@drawable/ic_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnfollow"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

</LinearLayout>
